<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionOverflowButtonStyle">@style/OverridedActionButtonOverflow</item>
    </style>
    <!-- Style to replace actionbar overflow icon. set item 'android:actionOverflowButtonStyle' in AppTheme -->
    <style name="OverridedActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">

        <item name="android:background">#01579B</item>
        <item name="android:icon">@drawable/menu_icon</item>
        <item name="android:contentDescription">"Change Menu logo for simplicity"</item>
    </style>
</resources>
