	<script>
var pSayfaId = <bean:write name="p_sayfaIdParam"/>;var pTanim = '<bean:write name="p_tanimParam"/>';var pTur = '<bean:write name="p_turParam"/>';var pEkBilgi = '<bean:write name="p_ekBilgiParam"/>';var pFileCnt = <bean:write name="p_fileCntParam"/>;var pDenetimTip = (pEkBilgi != '') ? pTur + '-' + pEkBilgi : pTur;var completeFunc = function(id, name, response) {	if(response.dosyaId) {		$.ajax({"url":"genel/sayfaResim/add.do",			data:{ sayfaId: pSayfaId, dosyaId: response.dosyaId, sira: pFileCnt++, json:1, ekBilgi: pEkBilgi },			async : false,			timeout: 30000, 			dataType:"json", 			success:function(data){},			error:function(xhr,err,e){ alert( "Hata: " + err );}});	} else if (response.message) {		$('#qq-upload-failed-text_'+id).html(response.message);	};};                function createUploader(){                        var uploader = new qq.FileUploader({                element: document.getElementById('uploader'),                action: 'addDosya.do',                params: { json:1, sayfaId:pSayfaId, tanim:pTanim, denetimTip:pDenetimTip, multiple:"yes"},                onComplete : completeFunc            });                   }        window.onload = createUploader;         	</script>
